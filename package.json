{
	"name": "quangpham.dev",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"author": {
		"name": "Quang Pham",
		"email": "quangpn.developer@gmail.com",
		"url": "https://quangpham.dev"
	},
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"check": "biome check .",
		"check:fix": "biome check --fix .",
		"check:unused": "knip",
		"check:unused:fix": "knip --fix",
		"test": "vitest",
		"test:ui": "vitest --ui --api 1990",
		"test:coverage": "vitest --coverage",
		"e2e": "playwright test",
		"e2e:ui": "playwright test --ui",
		"e2e:debug": "playwright test --debug",
		"e2e:codegen": "playwright codegen",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"pre-commit-lint": "bun run lint-staged",
		"analyze": "ANALYZE=true next build",
		"lighthouse": "mkdir -p lighthouse-reports && lighthouse http://localhost:3000 --output html --output-path ./lighthouse-reports/report-$(date +%Y%m%d-%H%M%S).html --view",
		"test-perf": "bun run build && bun run start && bun run lighthouse",
		"prepare": "husky"
	},
	"dependencies": {
		"@radix-ui/react-dropdown-menu": "^2.1.15",
		"@radix-ui/react-slot": "^1.2.3",
		"@vercel/analytics": "^1.5.0",
		"@vercel/speed-insights": "^1.2.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"framer-motion": "^12.23.0",
		"i18next": "^25.7.0",
		"lucide-react": "^0.562.0",
		"next": "16.1.1",
		"next-themes": "^0.4.6",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-i18next": "^16.5.0",
		"tailwind-merge": "^3.4.0",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.0",
		"@next/bundle-analyzer": "^16.1.0",
		"@playwright/test": "^1.52.0",
		"@storybook/addon-a11y": "^10.1.0",
		"@storybook/addon-docs": "^10.1.0",
		"@storybook/addon-links": "^10.1.0",
		"@storybook/nextjs": "^10.1.0",
		"@storybook/nextjs-vite": "^10.1.0",
		"@storybook/react": "^10.1.0",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^22",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitejs/plugin-react": "^5.1.0",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/ui": "^3.2.0",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv": "^17.2.0",
		"husky": "^9.1.7",
		"jsdom": "^27.4.0",
		"knip": "^5.52.0",
		"lint-staged": "^16.2.7",
		"playwright": "^1.52.0",
		"postcss": "^8",
		"postcss-load-config": "^6.0.1",
		"storybook": "^10.1.0",
		"tailwindcss": "^3.4.19",
		"typescript": "^5.8",
		"vite-tsconfig-paths": "^6.0.0",
		"vitest": "^3.2.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"biome check --fix --no-errors-on-unmatched"
		]
	}
}