{
	"name": "quangpham.dev",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"author": {
		"name": "Quang Pham",
		"email": "quangpn.developer@gmail.com",
		"url": "https://quangpham.dev"
	},
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "cross-env ANALYZE=false next build",
		"start": "next start",
		"clean": "rm -rf .next && rm -rf node_modules && rm -rf lighthouse-reports",
		"check": "biome check .",
		"check:fix": "biome check --fix .",
		"check:unused": "knip",
		"check:unused:fix": "knip --fix",
		"test": "vitest --run",
		"test:ui": "vitest --ui --api 1990",
		"test:coverage": "vitest --coverage",
		"e2e": "playwright test",
		"e2e:ui": "playwright test --ui",
		"e2e:debug": "playwright test --debug",
		"e2e:codegen": "playwright codegen",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"analyze": "cross-env ANALYZE=true next build --webpack",
		"ci:build": "cross-env ANALYZE=false next build",
		"ci:build:benchmark": "time cross-env ANALYZE=false next build",
		"ci:build:clean": "rm -rf .next && cross-env ANALYZE=false next build",
		"lighthouse": "mkdir -p lighthouse-reports && lighthouse http://localhost:3000 --output html --output-path ./lighthouse-reports/report-$(date +%Y%m%d-%H%M%S).html --view",
		"test-perf": "bun run build && bun run start && bun run lighthouse"
	},
	"dependencies": {
		"@radix-ui/react-slot": "^1.2.3",
		"@vercel/analytics": "^1.5.0",
		"@vercel/speed-insights": "^1.2.0",
		"babel-plugin-react-compiler": "^1.0.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"framer-motion": "^12.23.0",
		"lucide-react": "^0.562.0",
		"next": "16.1.1",
		"next-intl": "^4.7.0",
		"next-themes": "^0.4.6",
		"posthog-js": "^1.316.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"tailwind-merge": "^3.4.0",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.0",
		"@commitlint/cli": "^20.3.0",
		"@commitlint/config-conventional": "^20.3.0",
		"@next/bundle-analyzer": "^16.1.0",
		"@playwright/test": "^1.52.0",
		"@storybook/addon-a11y": "^10.1.0",
		"@storybook/addon-docs": "^10.1.0",
		"@storybook/addon-links": "^10.1.0",
		"@storybook/nextjs": "^10.1.0",
		"@storybook/nextjs-vite": "^10.1.0",
		"@storybook/react": "^10.1.0",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^25",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitejs/plugin-react": "^5.1.2",
		"@vitest/coverage-v8": "4.0.16",
		"@vitest/ui": "^3.2.0",
		"commitizen": "^4.3.1",
		"cross-env": "^10.1.0",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv": "^17.2.0",
		"happy-dom": "^20.0.11",
		"jsdom": "^27.4.0",
		"knip": "^5.52.0",
		"lefthook": "^2.0.13",
		"lighthouse": "^13.0.1",
		"playwright": "^1.52.0",
		"postcss": "^8",
		"postcss-load-config": "^6.0.1",
		"storybook": "^10.1.0",
		"tailwindcss": "^3.4.19",
		"typescript": "^5.8",
		"vite": "^7.3.0",
		"vite-tsconfig-paths": "^6.0.0",
		"vitest": "^4.0.16"
